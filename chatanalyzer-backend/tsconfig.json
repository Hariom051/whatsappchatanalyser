{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES2022",
    "module": "es2022",

    "moduleResolution": "bundler",

    "rootDir": "./src",
    "outDir": "./dist",

    "allowJs": false,
    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "noEmit": false,

    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
